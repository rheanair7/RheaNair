---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Resume | Rhea Nair" description="Resume and CV of Rhea Nair - Data Scientist">
	<div class="stack gap-20">
		<main class="wrapper about">
			<header class="hero">
				<h1 class="tag-line">
					<span class="text-gradient">Resume</span>
				</h1>
				<p class="description">
					Download my resume or view it directly below.
				</p>
				<div class="resume-actions">
					<a href={`${import.meta.env.BASE_URL}assets/RheaNairResume.pdf`} class="download-btn" download="Rhea_Nair_Resume.pdf">
						<Icon icon="paper-plane-tilt" size="1.2em" />
						Download PDF
					</a>
				</div>
			</header>

			<section class="pdf-viewer">
				<iframe 
					src={`${import.meta.env.BASE_URL}assets/RheaNairResume.pdf`}
					title="Rhea Nair Resume"
					class="resume-iframe"
				></iframe>
			</section>
		</main>
	</div>
	<ContactCTA />
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		text-align: center;
	}

	.tag-line {
		color: var(--gray-0);
		font-size: var(--text-xl);
	}

	.text-gradient {
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.description {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 54ch;
		line-height: 1.6;
	}

	.resume-actions {
		margin-top: 1rem;
	}

	.download-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background: var(--gradient-accent);
		color: var(--accent-text-over);
		text-decoration: none;
		border-radius: 999rem;
		font-weight: 600;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		box-shadow: var(--shadow-md);
	}

	.download-btn:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.pdf-viewer {
		width: 100%;
		max-width: 900px;
		margin: 0 auto;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: var(--shadow-lg);
		background: var(--gray-999);
	}

	.resume-iframe {
		width: 100%;
		height: 80vh;
		min-height: 600px;
		border: none;
		display: block;
	}

	@media (min-width: 50em) {
		.about {
			gap: 4rem;
		}

		.hero {
			gap: 2.5rem;
		}

		.tag-line {
			font-size: var(--text-2xl);
		}

		.resume-iframe {
			height: 85vh;
			min-height: 700px;
		}
	}

	@media (max-width: 768px) {
		.resume-iframe {
			height: 70vh;
			min-height: 500px;
		}
	}
</style>