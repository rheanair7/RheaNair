---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Resume | Rhea Nair" description="Resume and CV of Rhea Nair - Data Scientist">
	<div class="stack gap-20">
		<main class="wrapper about">
			<header class="hero">
				<h1 class="tag-line">
					<span class="text-gradient">Resume</span>
				</h1>
				<p class="description">
					Download my resume or view my professional background and qualifications below.
				</p>
				<div class="resume-actions">
					<a href="#" class="download-btn" download>
						<Icon icon="paper-plane-tilt" size="1.2em" />
						Download PDF
					</a>
				</div>
			</header>

			<section class="section">
				<h2 class="section-title">Education</h2>
				<!-- Education content will go here -->
			</section>

			<section class="section">
				<h2 class="section-title">Experience</h2>
				<!-- Experience content will go here -->
			</section>

			<section class="section">
				<h2 class="section-title">Skills</h2>
				<!-- Skills content will go here -->
			</section>

			<section class="section">
				<h2 class="section-title">Projects</h2>
				<!-- Projects content will go here -->
			</section>

			<section class="section">
				<h2 class="section-title">Publications & Awards</h2>
				<!-- Publications content will go here -->
			</section>
		</main>
	</div>
	<ContactCTA />
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		text-align: center;
	}

	.tag-line {
		color: var(--gray-0);
		font-size: var(--text-xl);
	}

	.text-gradient {
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.description {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 54ch;
		line-height: 1.6;
	}

	.resume-actions {
		margin-top: 1rem;
	}

	.download-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background: var(--gradient-accent);
		color: var(--accent-text-over);
		text-decoration: none;
		border-radius: 999rem;
		font-weight: 600;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		box-shadow: var(--shadow-md);
	}

	.download-btn:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.section {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.section-title {
		color: var(--gray-0);
		font-size: var(--text-xl);
		border-bottom: 2px solid var(--accent-regular);
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}

	@media (min-width: 50em) {
		.about {
			gap: 4rem;
		}

		.hero {
			gap: 2.5rem;
		}

		.tag-line {
			font-size: var(--text-2xl);
		}
	}
</style>