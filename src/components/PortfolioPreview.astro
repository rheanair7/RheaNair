---
interface Props {
	project: any;
}

const { project } = Astro.props;
---

<div class="portfolio-preview">
	{project.data.img && (
		<div class="preview-image">
			<img src={project.data.img} alt={project.data.img_alt || project.data.title} />
		</div>
	)}
	<div class="preview-content">
		<h3 class="title">
			<a href={import.meta.env.BASE_URL + `work/${project.slug}/`}>{project.data.title}</a>
		</h3>
	</div>
</div>

<style>
.portfolio-preview {
	background: white;
	border-radius: 12px;
	overflow: hidden;
	box-shadow: 0 4px 6px rgba(0,0,0,0.07);
	transition: all 0.3s ease;
	border: 1px solid #e1e5e9;
}

.portfolio-preview:hover {
	transform: translateY(-4px);
	box-shadow: 0 12px 25px rgba(0,0,0,0.15);
}

.preview-image img {
	width: 100%;
	height: 200px;
	object-fit: cover;
}

.preview-content {
	padding: 1rem 1.5rem 1.5rem 1.5rem;
}

.title {
	margin: 0;
	font-size: 1.1rem;
	font-weight: 600;
}

.title a {
	color: var(--text-primary, #2c3e50);
	text-decoration: none;
}

.title a:hover {
	color: var(--accent-primary, #667eea);
}
</style>