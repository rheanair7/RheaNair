---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<span class={`pill ${className || ''}`}>
	<slot />
</span>

<style>
.pill {
	display: inline-block;
	background: var(--bg-secondary, #f8f9fa);
	color: var(--text-secondary, #666);
	padding: 0.5rem 1rem;
	border-radius: 20px;
	font-size: 0.875rem;
	font-weight: 500;
	border: 1px solid var(--border-color, #e1e5e9);
}
</style>