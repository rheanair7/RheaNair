---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<span class={`pill ${className || ''}`}>
	<slot />
</span>

<style>
.pill {
	display: inline-block;
	background: var(--gradient-accent);
	color: var(--accent-text-over);
	padding: 0.5rem 1rem;
	border-radius: 20px;
	font-size: 0.875rem;
	font-weight: 500;
	border: 1px solid var(--accent-regular);
	box-shadow: var(--shadow-sm);
}
</style>